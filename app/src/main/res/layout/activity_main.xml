<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="296dp"
        android:layout_height="309dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="57dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/field2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_CE"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="clear"

                android:text="CE" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_C"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="clearall"

                android:text="C" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_factorial"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"
                android:text="n!"
                android:textAllCaps="false"
                android:onClick="factorial"

                android:typeface="normal" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_backspace"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="backspace"
                app:icon="@android:drawable/ic_input_delete" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_power"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="power"
                android:textAllCaps="false"
                android:text="x^y" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_inverse"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="1/x"
                android:onClick="inverse"
                android:textAllCaps="false" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_sqr"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"
                android:text="x^2"
                android:textAllCaps="false"
                android:onClick="square"
                android:typeface="normal" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="*"
                android:onClick="multiply" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_7"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="seven"
                android:text="7" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="eight"
                android:text="8" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="nine"
                android:text="9" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_divide"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="divide"
                android:text="/" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_1"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="one"
                android:text="1" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="two"
                android:text="2" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="three"
                android:text="3" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="plus"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_4"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="four"
                android:text="4" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="five"
                android:text="5" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="six"
                android:text="6" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="minus"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_0"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_span="3"
                android:onClick="zero"

                android:text="0" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_equal"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:layout_span="3"
                android:onClick="answer"
                android:text="Answer" />


        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/field1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/field2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/field2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="199dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:lineSpacingExtra="12sp"
        android:orientation="vertical"
        android:text="Calculator"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#EF1616"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:text="Adeel - BSEF18A519"
        app:layout_constraintBottom_toTopOf="@+id/field1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>